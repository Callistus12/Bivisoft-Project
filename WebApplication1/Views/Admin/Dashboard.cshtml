@model Calischool.Models.ErrorViewModel
@{
    ViewData["Title"] = "Dashboard";
     
}
  @if (Model != null && Model.Message != null)
     {
        if (Model.ErrorHappened)
        {
            <div class="alert alert-danger alert-dismissible">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>Message:</strong> <b> @Model.Message   </b>
            </div>
        }
        else
        {
            <div class="alert alert-success alert-dismissible">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>Message:</strong> <b>  @Model.Message  </b>
            </div>
        }
  }
<div class="container">
   
    <div class="row">
        <div class=" col-sm-6 col-xs-6 col-md-3 col-lg-3 col-xl-3">
           <h2 class="text-primary"> Student Table</h2>
        </div>
         <div class="bg-primary col-sm-6 col-xs-6 col-md-3 col-lg-3 col-xl-3 text-white text-center h-auto">
                <p><strong>Number of student in the Table: </strong>   @Model.Users.Count()</p>
         </div>
         <div class="col-sm-6 col-xs-6 col-md-4 col-lg-4 col-xl-4">
             <form class="d-flex">
                <input class="form-control me-sm-2" type="text" name="userDetails" placeholder="Search user first name:" />
                <button class="btn btn-success btnAdmin form-control my-2 my-sm-0 " type="submit"> <i class="bi bi-search"></i></button>
             </form>
         </div>
    </div><br/>
    <table class="table table-bordered table-striped table-responsive adminTable" >
        <thead class="bg-primary">
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Phone Number
                </th>
                <th>
                    Date of Birth
                </th>
                <th>
                    Country
                </th>
                <th>
                    Displine
                </th>
                <th>
                    Email
                </th>
                 <th>
                    Remark
                </th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Users.Count() > 0 && Model != null)
            {
                foreach (var obj in Model.Users)
                {
                    <tr>

                        <td >
                            @obj.FirstName
                        </td>
                        <td>
                            @obj.LastName
                        </td>
                        <td>
                            @obj.PhoneNumber
                        </td>
                        <td>
                            @obj.DateOfBirth
                        </td>
                        <td>
                            @obj.Country
                        </td>
                        <td>    
                            @obj.Displine
                        </td>
                            <td>
                            @obj.Email
                        </td>
               
                        <td>
                             
                            <div class="btn-group w-75" role="group">
                               <input value="@obj.Id" id="userid" hidden/>
                                <a class="btn"  data-toggle="modal"   data-target="#ModalPopUp" onclick="deleteUser('@obj.Id')"  name="btnLink" id="btnLink"> <i class="bi bi-trash iconSizeColor"></i></a>
                               
                                @if(@obj.IsAdmin == true)
                                {
                                    <a  asp-controller="Admin" asp-action="RemoveUserToRole" asp-route-userToAdmin="@obj.Id">
                                        <i class="bi bi-key iconSizeColor iconColor2"></i> </a>
                                }
                                else
                                {
                                     <a id="AdminBtnForSignInRole" asp-controller="Admin" asp-action="AddAdminToRole" asp-route-userToAdmin="@obj.Id">
                                    <i class="bi bi-key iconSizeColor iconColor1"></i> </a>
                                }
                               
                               
                            </div>
                        </td>
                    </tr>
                }
            }
        
        </tbody>
    </table>
    
    <div class="modal fade" id="ModalPopUp" role="dialog">
        <div class="modal-dialog err-pop " style="">
            <div class="modal-content bg-light">
               
                <div class="modal-header bg-primary text-center text-white">
                    <h4 >Delete Warning</h4>
                    <button id="DivClose" type="button" class="close bg-danger" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body" style="text-align:center;">
                    Are you sure you want to delete this user!
                </div>
               <a  id="link" href="" class="badge-pill w-50 adminTableBtn bg-danger text-light text-center ">
                    
                    <i class="bi bi-trash"></i>
                </a>
            </div>
        </div>
    </div>
</div>



