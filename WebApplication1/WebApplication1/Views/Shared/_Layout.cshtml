<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Calischool</title>

    <link rel="stylesheet" href="~/FirstProject/css/bootstrap-grid.min.css" />
    <link rel="stylesheet" href="~/FirstProject/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Calischool.styles.css" asp-append-version="true" />


    <script src="~/FirstProject/js/jquery.slim.min.js"></script>
    <script src="~/FirstProject/js/bootstrap.bundle.min.js"></script>
    <script src="~/FirstProject/js/popper.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


    
</head>
<body>
    <div class="row">
        <div class="col-lg-1 col-md-2 col-sm-2 mt-2">
            <img src="~/FirstProject/images/bivi.jpg" alt="Bivisoft"style="width: 50%; height: auto; border-radius: 100px;margin-left: 50px;"/>
        </div>
        <div class="col-lg-7 col-sm-3 my-0 ">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><h1 style="color: blue; ">BIVISOFT ACADEMY</h1></a>
        </div>
            <div class="col-lg-3 col-sm-2 mt-3 border border-primary ">
            <p id="schoolClock" class="ml-5 mb-0 text-end" style="color: blue;"></p>
        </div>
     </div>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if(User.Identity.IsAuthenticated)
                        {
                            <li class="navbar-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                            <li class="navbar-item">
                                 <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Login">LogOut</a>
                            </li>
                        }
                        else
                        {
                            <li class="navbar-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
			   	            <li class="navbar-item">
                                 <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
			   	            </li>
			   	            <li class="navbar-item">
                                 <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Login">LogIn</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                        }
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted ">
        <div class="container bg-grey text-center h-10">
            &copy; 2022 - Calischool - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
</body>
</html>
